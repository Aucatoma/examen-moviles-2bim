<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_row"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <TextView
        android:id="@+id/txtView_nombre_fila"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/txtView_version_fila"
        android:layout_width="231dp"
        android:layout_height="41dp"
        android:layout_alignEnd="@+id/btn_detalle_fila"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtView_peso_fila"
        android:layout_width="113dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtView_version_fila"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="16dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_detalle_fila"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtView_peso_fila"
        android:layout_marginEnd="8dp"
        android:text="Detalles" />

    <TextView
        android:id="@+id/textView_version_fila"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtView_version_fila"
        android:layout_toStartOf="@+id/txtView_nombre_fila"
        android:text="VersiÃ³n"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_peso_fila"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/textView_version_fila"
        android:layout_alignTop="@+id/txtView_peso_fila"
        android:text="Peso (GB)"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider" />
</RelativeLayout>