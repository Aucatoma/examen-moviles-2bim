<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_app_row"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#e0e0e0">

    <TextView
        android:id="@+id/txtView_nombre_fila"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/txtView_version_fila"
        android:layout_width="157dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="110dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_detalle_fila"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/txtView_nombre_fila"
        android:text="Detalles" />

    <TextView
        android:id="@+id/textView_version_fila"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtView_nombre_fila"
        android:layout_alignTop="@+id/imgView_foto_app_row"
        android:text="VersiÃ³n"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/imgView_foto_app_row"
        android:layout_width="102dp"
        android:layout_height="108dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="23dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>